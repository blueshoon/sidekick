
{?errors}
	<div class="alert alert--error">
		<p><strong>The following errors occurred:</strong></p>
		<ul>
			{#errors}
				<li data-test="alert-error">{.}</li>
			{/errors}
		</ul>
	</div>
{/errors}

{?success}
	<div class="alert alert--success">
		<p data-test="alert-success"><strong>{success}</strong></p>
	</div>
{/success}
